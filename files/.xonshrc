def gitstatusf ():
	from xonsh.prompt.vc_branch import git_dirty_working_directory
	if git_dirty_working_directory(include_untracked=True):
		return '{#d79921}'
	return '{#b8bb26}'

$FORMATTER_DICT['gitstatusf']=gitstatusf
$PROMPT='{env_name:{} } {cwd_base}{gitstatusf}{curr_branch: {}}{NO_COLOR} '

