platform='unknown'
unamestr=`uname`

if [[ "$unamestr" == 'Linux' ]]; then
   platform='linux'
elif [[ "$unamestr" == 'Darwin' ]]; then
   platform='mac'
fi

export PATH="$HOME/bin:$HOME/.yarn/bin:$PATH"
# export PATH="$HOME/.pyenv/bin:$PATH"

if [[ $platform == 'linux' ]]; then
	export PATH="/opt/cuda/bin:$PATH:$HOME/.gem/ruby"
elif [[ $platform == 'mac' ]]; then
	export PATH="/usr/local/opt/go/libexec/bin:$HOME/Projects/go/bin:$PATH"
fi

export LD_LIBRARY_PATH="/opt/cuda/lib64:/opt/cuda/extras/CUPIT/lib64"
export CUDA_HOME="/opt/cuda"
export GOPATH=$HOME/Projects/go
export EDITOR=nvim
export GIT_EDITOR=nvim
export VIRTUAL_ENV_DISABLE_PROMPT=true
source ~/.localenvvariables
