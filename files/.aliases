platform='unknown'
unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
   platform='linux'
elif [[ "$unamestr" == 'Darwin' ]]; then
   platform='mac'
fi
if [[ $platform == 'linux' ]]; then
	alias agi='sudo apt-get install'
	alias agr='sudo apt-get remove'
	alias agu='sudo apt-get update'
	alias agup='sudo apt-get upgrade'
	alias acs='apt-cache search'
elif [[ $platform == 'mac' ]]; then
	alias cdfede='cd /Volumes/Datos/Fede'
	alias lightsoff='pmset displaysleepnow'
fi
alias rm='trash'
alias python='python3'
alias pip='pip3'
alias l='ls -lash'
alias poke='bash ~/dotfiles/files/poke.txt'
alias preschedules='node ~/Projects/preschtocalnode/nightmare.js'
alias downloads='cd ~/Downloads'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias e='exit'
alias s='sudo'
alias shutdown='sudo shutdown –h now'    #requires root password, disable it by sudo chmod u+s /sbin/shutdown
alias restart='sudo shutdown –r now'      #requires root password, disable it by sudo chmod u+s /sbin/shutdown
alias evim='nvim ~/.config/nvim/init.vim'
alias upgradeallpip='pip3 freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip3 install -U'
